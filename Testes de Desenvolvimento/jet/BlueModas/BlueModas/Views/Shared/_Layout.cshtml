<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-block p-2 bg-primary text-center text-white navbar-fixed-top">
        <div class="text-center"><h2>@ViewBag.Title</h2></div>
        <div class="text-center">@ViewBag.Message</div>
    </div>
    <div id="divCarregando" class="text-center">
        <img src="~/image/Loading.gif" />
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Blue Modas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        window.onload = function () {
            document.getElementById("divCarregando").style.display = 'none';
        };
    </script>
</body>
</html>
