<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $.getJSON("Home/ListaProdutos",
            function (json) {
                var div;
                for (var i = 0; i < json.length; i++) {
                    div = $('<div class="col-sm-3 col-sm-offset-1 clearfix">');
                    div.append('<div class="card mb-4 shadow-sm">');
                    div.append('<div class="card-header">');
                    div.append('<h4 class="my-0 fw-normal">' + json[i].Nome + '</h4>');
                    div.append('</div>');
                    div.append('<div class="card-body">');
                    div.append('<img src="' + json[i].imagem + '" class="rounded" alt="' + json[i].Nome + '" width="100%">');
                    div.append('<h4 class="card-title pricing-card-title">Por apenas R$ ' + json[i].Preco.toLocaleString("pt-BR", { style: "currency", currency: "BRL" }) + '</h4>');
                    div.append('<a class="btn btn-primary" href="Pedidos/AdicionaProduto/' + json[i].Id + '" role="button"> + Adicionar Carrinho</a>');
                    div.append('</div>');
                    div.append('</div>');
                    div.append('</div>');
                    $('#produtos').append(div);
                }
            });
    });
</script>
<div id="fechar">
    @Html.ActionLink("Fechar Pedido", "Index", "Pedidos", null, new { @class = "btn btn-primary" })
</div>
<div id="produtos" class="row row-cols-1 row-cols-md-3 mb-3 text-center">

</div>
